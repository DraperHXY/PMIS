<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.draper.system.dao.RolePermissionRelationMapper">

    <insert id="correlate">
        INSERT INTO user_role
        (create_at,update_at,role_id,permission_id)
        VALUES
        (#{createAt}, #{updateAt},#{roleId},#{permissionId})
    </insert>

    <delete id="unCorrelate">
        DELETE FROM user_role
        WHERE user_id = #{userId} AND role_id = #{roleId}
    </delete>

    <select id="selectRolePermission" resultType="com.draper.system.entity.UserRoleRelation">
        SELECT *
        FROM user_role
        WHERE user_id = #{userId}
    </select>

    <select id="selectPermissionsFromRole" resultType="com.draper.system.entity.UserRoleRelation">
        SELECT *
        FROM user_role
        WHERE role_id = #{roleId}
    </select>

</mapper>