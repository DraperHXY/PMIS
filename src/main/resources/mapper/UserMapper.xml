<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.draper.dao.UserDao">

    <insert id="insertUser">
        INSERT INTO user
        (create_at,update_at,account,password,work_id)
        VALUES
        (#{createAt}, #{updateAt}, #{account}, #{password}, #{workId})
    </insert>

    <select id="selectUserByAccount" resultType="com.draper.entity.User">
        SELECT *
        FROM user
        WHERE account = #{account}
    </select>

    <select id="selectUserByWorkId" resultType="com.draper.entity.User">
        SELECT *
        FROM user
        WHERE work_id = #{workId}
    </select>

</mapper>